<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <navigation
        android:id="@+id/devicesGraph"
        app:startDestination="@id/devicesFragment" >
        <fragment
            android:id="@+id/devicesFragment"
            android:name="ru.sulgik.remotearduino.ui.devices.DevicesFragment"
            android:label="DevicesFragment" />
    </navigation>

    <navigation
        android:id="@+id/functionsGraph"
        app:startDestination="@id/functionsFragment" >

        <fragment
            android:id="@+id/functionsFragment"
            android:name="ru.sulgik.remotearduino.ui.functions.FunctionsFragment"
            android:label="fragment_functions"
            tools:layout="@layout/fragment_functions" />

    </navigation>

    <navigation
        android:id="@+id/homeGraph"
        app:startDestination="@id/homeFragment" >

        <fragment
            android:id="@+id/homeFragment"
            android:name="ru.sulgik.remotearduino.ui.home.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home" />

    </navigation>

    <navigation
        android:id="@+id/accountGraph"
        app:startDestination="@id/accountFragment" >
        <fragment
            android:id="@+id/accountFragment"
            android:name="ru.sulgik.remotearduino.ui.auth.AccountFragment"
            android:label="AccountFragment" />
    </navigation>

</navigation>